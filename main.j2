server {
        listen 80;
        server_name {{ server_name }};
        return 301 https://$host$request_uri;  # Redirect HTTP to HTTPS
}

server {
        listen 443 ssl;
        server_name {{ server_name }};

        ssl_certificate /etc/nginx/ssl/{{ server_name.replace(".","_") }}.pem;
        ssl_certificate_key /etc/nginx/ssl/{{ server_name.replace(".","_") }}.key;

        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers 'TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384';
        ssl_prefer_server_ciphers off;
        ssl_session_cache shared:SSL:10m;
        ssl_session_timeout 10m;

        include includes/{{ server_name }}_locations/*.conf;
        include includes/{{ server_name }}_errors/*.conf;

}
include includes/{{ server_name }}_upstreams/*.conf;
